{
  "name": "@balupton/dorothy",
  "version": "0.0.1",
  "private": true,
  "license": "RPL-1.5",
  "description": "Benjamin Lupton's user configuration for Dorothy",
  "homepage": "https://github.com/balupton/dotfiles",
  "funding": "https://bevry.me/fund",
  "bugs": {
    "url": "https://github.com/balupton/dotfiles/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/balupton/dotfiles.git"
  },
  "keywords": [
    "automation",
    "bash",
    "bash",
    "cli",
    "dotfile",
    "dotfiles",
    "fish-shell",
    "fish",
    "fish",
    "linux",
    "macos",
    "productivity",
    "sh",
    "shell",
    "terminal",
    "typescript",
    "ubuntu",
    "unix",
    "windows",
    "wsl",
    "wsl2",
    "zsh"
  ],
  "author": "2013+ Benjamin Lupton <b@lupton.cc> (https://balupton.com)",
  "maintainers": [
    "Benjamin Lupton <b@lupton.cc> (https://github.com/balupton)"
  ],
  "contributors": [
    "Benjamin Lupton <b@lupton.cc> (https://github.com/balupton)"
  ],
  "engines": {
    "node": ">=24"
  },
  "editions": [
    {
      "description": "Source Code",
      "directory": ".",
      "entry": "init.sh",
      "tags": [
        "source",
        "shell",
        "bash",
        "zsh",
        "deno",
        "typescript"
      ],
      "engines": {
        "node": "24"
      }
    }
  ],
  "devDependencies": {
    "@bevry/github-api": "^11.4.0",
    "assert-helpers": "^11.13.0",
    "eslint": "^9.39.2",
    "eslint-config-bevry": "^6.1.6",
    "prettier": "^3.7.4",
    "projectz": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "my:meta:backers": "github-backers --write -- --write=sources/shoutouts.txt",
    "my:setup": "./commands/dorothy lint --upgrade",
    "my:verify": "./commands/dorothy lint",
    "our:meta": "npm run our:meta:backers && npm run our:meta:projectz",
    "our:meta:backers": "npm run my:meta:backers",
    "our:meta:projectz": "projectz --offline",
    "our:setup": "npm run my:setup",
    "our:test": "npm run our:verify && npm test",
    "our:verify": "npm run my:verify",
    "test": "./commands/dorothy test"
  },
  "eslintConfig": {
    "rules": {
      "require-atomic-updates": 0,
      "no-console": 0,
      "no-use-before-define": 1,
      "valid-jsdoc": 0
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "endOfLine": "lf"
  }
}
